{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/server.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "server.ts": {
            "runtime": "@vercel/node",
            "includeFiles": [
                "server/**",
                "data/**"
            ]
        }
    }
}